<p id="notice"><%= notice %></p>

<h1>Riders</h1>

<table tab class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Nation</th>
      <th>Bike</th>
      <th>Number</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class=".table-hover">
    <% @riders.each do |rider| %>
      <tr>
        <td><%= rider.name %></td>
        <td><%= rider.nation %></td>
        <td><%= rider.bike %></td>
        <td><%= rider.number %></td>
        <td><%= rider.team.name %></td>
        <td><%= link_to 'Show', rider %></td>
        <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
        <td><%= link_to 'Destroy', rider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

